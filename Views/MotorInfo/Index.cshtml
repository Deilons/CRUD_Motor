@model IEnumerable<CRUD_Motor.Models.MotorInfo>

@{
    ViewBag.Title = "Index";
}
<div class="text-center">
    <h1 class="display-4">this is the INDEX view</h1>
</div>

<p>
    <a asp-controller="MotorInfo" asp-action="Create" class="btn btn-primary">Create a new motor</a>
</p>

<table class="table text-center table-striped">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Fuel Type</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Brand</td>
            <td>@item.Model</td>
            <td>@item.FuelTypeName</td>
            <td>@item.Year</td>
            <td><a asp-controller="MotorInfo" asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a> | <a asp-controller="MotorInfo" asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Edit</a> | <a asp-controller="MotorInfo" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>
        </tr>
    }
    </tbody>
</table>
