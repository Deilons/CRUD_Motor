@model CRUD_Motor.Models.MotorInfo;

@{
    ViewData["Title"] = "Delete Motor";
}

<h2>Delete Motor</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>MotorInfo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Brand
        </dt>
        <dd class="col-sm-10">
            @Model.Brand
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>  
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Fuel Type
        </dt>
        <dd class="col-sm-10">
            @Model.FuelType
        </dd>
        <dt class="col-sm-2">
            Year
        </dt>
        <dd class="col-sm-10">
            @Model.Year
        </dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>